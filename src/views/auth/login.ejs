
<%- include('../partials/head') %>

<div class="container-fluid page-body-wrapper full-page-wrapper">
  <div class="main-panel w-100">
    <div class="content-wrapper d-flex align-items-center auth px-0">

      <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo text-center">
              <h2 class="font-weight-bold" style="color: #4B49AC;">ShioSMS</h2>
              <!-- <img src="/images/logo.svg" alt="logo"> -->
            </div>

            <form class="pt-3" action="/dang-nhap" method="POST">

              <%- include('../partials/form-message'); %>
              <div class="form-group login-formGroup">
                <i class="fa-solid fa-user"></i>
                <input type="" class="form-control form-control-lg font-weight-bold" name="username" placeholder="Tên đăng nhập">
              </div>

              <div class="form-group login-formGroup">
                <i class="fa-solid fa-lock"></i>
                <input type="password" class="form-control form-control-lg font-weight-bold" name="password" placeholder="Mật khẩu">
              </div>

              <div class="my-4 d-flex justify-content-end align-items-center">
                <a href="/quen-mat-khau" class="auth-link text-black">Quên mật khẩu?</a>
              </div>

              <div class="mt-3">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Đăng nhập</button>
              </div>
             
            </form>
          </div>
        </div>
      </div>

