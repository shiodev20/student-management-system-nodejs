<%- include('../partials/head') %>
<%- include('../partials/navbar') %>


<div class="container-fluid page-body-wrapper">
  
<%- include('../partials/sidebar') %>

  <div class="main-panel">

    <div class="content-wrapper">

      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <div class="card-title"></div>

              <ul class="nav nav-tabs">
                <li class="nav-item">
                  <a class="nav-link font-weight-bold active" id="" data-toggle="tab" href="#report-classroom-subject-score" role="tab">Tổng kết điểm môn học của lớp</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link font-weight-bold" id="" data-toggle="tab" href="#report-subject" role="tab">Tổng kết môn học</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link font-weight-bold" id="" data-toggle="tab" href="#report-semeter" role="tab">Tổng kết học kỳ</a>
                </li>
              </ul>
              
              <div class="tab-content">

                <div class="tab-pane fade" id="report-classroom-subject-score">
                  <form action="/bao-cao/tong-ket-diem-mon-hoc-cua-lop" method="GET">
                    <div class="form-group row">
  
                      <div class="col-md-3 col-sm-12 mb-2">
                        <label for="year">Năm học</label>
                        <select class="form-control form-control-sm font-weight-bold" id="year" name="year">
                          <% years.forEach(year => { %>
                            <% if(year.status) { %>
                              <option value="<%= year.id %>" selected><%= year.name %></option>
                            <% } else { %>
                              <option value="<%= year.id %>"><%= year.name %></option>
                            <% } %>
                          <% }) %>
                        </select>
                      </div>

                      <div class="col-md-3 col-sm-12 mb-2">
                        <label for="semester">Học kỳ</label>
                        <select class="form-control form-control-sm font-weight-bold" id="semester" name="semester">
                          <% semesters.forEach(semester => { %>
                            <% if(semester.status) { %>
                              <option value="<%= semester.id %>" selected><%= semester.name %></option>
                            <% } else { %>
                              <option value="<%= semester.id %>"><%= semester.name %></option>
                            <% } %>
                          <% }) %>
                        </select>
                      </div>

                      <div class="col-md-3 col-sm-12 mb-2">
                        <label for="subject">Môn học</label>
                        <select class="form-control form-control-sm font-weight-bold" id="subject" name="subject">
                          <% subjects.forEach(subject => { %>
                            <option value="<%= subject.id %>"><%= subject.name %></option>
                          <% }) %>
                        </select>
                      </div>

                      <div class="col-md-3 col-sm-12 mb-2">
                        <label for="classroom">Lớp học</label>
                        <select class="form-control form-control-sm font-weight-bold" id="classroom" name="classroom">
                          <% classrooms.forEach(classroom => { %>
                            <option value="<%= classroom.id %>"><%= classroom.yearId + ' - ' + classroom.name %></option>
                          <% }) %>
                        </select>
                      </div>

                    </div>

                    <div class= my-2">
                      <button type="submit" class="btn btn-info">Báo cáo</button>
                    </div>
                  </form>
                  <hr>

                </div>

