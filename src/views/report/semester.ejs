                            <% } else { %>
                              <option value="<%= semester.id %>"><%= semester.name %></option>
                            <% } %>
                          <% }) %>
                        </select>
                      </div>

                      <div class="col-md-3 col-sm-12 mb-2">
                        <label for="subject">Môn học</label>
