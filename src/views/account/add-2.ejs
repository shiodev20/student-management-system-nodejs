<%- include('../partials/head') %>

<%- include('../partials/navbar') %>

<section class="section">
  <div class="form-container">
    <div class="box form-content">
      <p class="form-title">Cấp tài khoản</p>

      <form action="/tai-khoan/tao-tai-khoan/<%= username %>" method="POST">

        <%- include ('../partials/form-message') %>

        <div class="field is-horizontal">
          <div class="field-body">

            <div class="field">
              <label class="label">Mã tài khoản</label>
              <div class="control">
                <input class="input" type="text" name="accountId" value="<%= accountId %>" readonly>
              </div>
            </div>

            <div class="field">
              <label class="label">Tên đăng nhập</label>
              <div class="control">
                <input class="input" type="text" name="username" value="<%= username %>" readonly>
              </div>
            </div>
          </div>
        </div>

        <div class="field is-horizontal">

          <div class="field-body">
            <div class="field" style="flex: 1;">
              <label class="label">Mật khẩu</label>
              <input class="input" type="text" name="password" value="">
            </div>

            <div class="field" style="flex: 1;">
              <label class="label">Vai trò</label>
              <div class="select" style="width: 100%;">
                <select name="role" style="width: 100%;">
                  <% roles.forEach(role => { %>
                      <option value="<%= role.id %>"><%= role.name %></option>
                  <% }) %>
                  
                </select>
              </div>
            </div>

          </div>

        </div>
        
        <div class="has-text-right">
          <button type="submit" class="button is-primary">Cấp tài khoản</button>
        </div>
      </form>
    </div>
  </div>

</section>

<%- include('../partials/footer') %>
